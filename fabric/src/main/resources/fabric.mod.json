{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "license": "${license}",
  "icon": "assets/${mod_id}/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "${maven_group}.${mod_id}.fabric.FabricCommon"
    ],
    "client": [
      "${maven_group}.${mod_id}.fabric.client.FabricClient"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "minecraft": "~${minecraft_version}",
    "java": ">=21",
    "architectury": ">=${architectury_api_version}",
    "cobblemon": ">=${cobblemon_min_version}",
    "fabric-api": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
